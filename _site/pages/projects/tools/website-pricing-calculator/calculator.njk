<script>
  function getValues() {

    let myForm = document.getElementById('myForm');
    let formData = new FormData(myForm);
    let total = 0;
    let moneySign = "$";
    let zeros = ".00";

    for (var value of formData.values()) {
        total += parseInt(value);
    }

    document.getElementById("total").innerHTML = moneySign += total += zeros;
    
    console.log(total);
  }
</script>