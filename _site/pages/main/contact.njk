<script src="https://www.gstatic.com/firebasejs/11.2.0/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/11.2.0/firebase-firestore-compat.js"></script>

<div class="container contact flex mtb-100">
    
    <div class=" back-white paa-25 animated mw-50" style="">
        <h1 class="largest-title">Let's Talk!</h1>
        <p class="mb-50">Are you in working together? Please feel free to reach out I reply quick.</p>
         <div class="back-white animated" style="animation-delay:.5s;">
            <h2 class="h4">Contact Information</h2>
            <p>Fill out the contact form and I'll be in touch with you as soon as possible.</p>
            <p>Email: rubengutierrezwebdesign@gmail.com</p>
            <p>Phone: (562) 475 - 8959</p>
        </div>
    </div>
   
    
    <form class="br contact-form back-white paa-25 animated" style="animation-delay:1s;max-width:500px;width:100%;">
        <input type="search" class="full-name mb-20 paa-10" placeholder="Your Name"  style="width:100%;max-width:500px;">
        <br>
        <input type="search" class="email-address mb-20 paa-10" placeholder="Your Email" style="width:100%;max-width:500px;">
        <br>
        <textarea name="" class="message paa-10 mb-20" placeholder="Your Message" style="height:120px;width:100%;max-width:500px;" ></textarea>
        <br>
        <button class="submit-form paa-25 btn" type="submit">Submit</button>
    </form>
    
    <script src="/assets/js/firebase.js"></script>

    <script>
        firebase.initializeApp(firebaseConfig);

        const db = firebase.firestore();
    </script>

    <script >
        const contactForm = document.querySelector('.contact-form');
        const name = document.querySelector('.full-name');
        const email = document.querySelector('.email-address');
        const submit = document.querySelector('.submit-form');
        const message = document.querySelector('.message');

        submit.addEventListener("click", (e) => {
            e.preventDefault();
            db.collection('contact-form')
                .doc('Message')
                .set({
                    name: name.value,
                    email: email.value,
                    message: message.value,
                })
                .then(() => {
                    contactForm.reset();
                });
        });
    </script>

</div>