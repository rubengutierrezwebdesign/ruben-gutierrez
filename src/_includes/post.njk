<!DOCTYPE html>
<html lang="en">
    {%- include 'head.njk' -%}
<body>

    {%- include 'nav.njk' -%}

    <!-- Container -->
    <div class="container mtb-100 j-flex">
        
        <!-- Post Container -->
        <div class="inner-container post border-box" style="max-width:800px;">
            
            <!-- Post Information Container -->
            <div class="inner-container mb-50">    

                <!-- Date -->
                <p class="_10 _600">{{ page.date | postDate }}</p>
                <!-- Title -->
                <h1 class="" style="font-size:36px;">{{title}}</h1>

            </div>

            <!-- Content Container -->
            <div class="mtb-50"style="max-width: 500px;">
                <!-- Content -->
                {{ content  | safe}}
            </div>
      
        </div>
            
        {# Related Posts #}
        <div class="inner-cont mt-50" style="max-width:175px;">
            
            {# Recent Posts #}
            <div class="recent ">
                <h2 class="h3 _600">Recent Posts</h2>

                {% for post in collections.posts | reverse %}
                    {% if loop.index0 < 3 %}

                        <li class=" mtb-25">
                            <article class="">

                                <div class="" style="">
                                    <img src="{{post.data.thumbnail}}" alt="" >
                                </div>

                                <div class="" style="">
                                    <a href="{{post.url}}" style="text-decoration:none;"><h3 class="h4">{{post.data.title }}</h3></a>
                                    <p class="_12">{{post.data.description | truncate(50)}}</p>   
                                </div>

                            </article>
                        </li>

                        {% endif %}
                    {% endfor %}
                </div>
        </div>
    </div>
            {%- include 'footer.njk' -%}


</body>
</html>