<!DOCTYPE html>
<html lang="en">
    {%- include 'head.njk' -%}
<body>

    {%- include 'nav.njk' -%}

    <!-- Container -->
    <div class="postop mtb-25">
        
        <!-- Post Container -->
        <div class="border-box" >
            
            <!-- Post Information Container -->
            <div class="mb-50 flex paa-25">    

                <!-- Date -->
                <div style="max-width:30%;padding:50px 0">

                    <span class="_10 _700">{{ page.date | postDate }}</span>

                     <!-- Title -->
                    <h1 class="h2">{{title}}</h1>

                </div>

               

                <img class="" style="max-width:55%;" src="\assets\images\jekyll-to-11ty.png" alt="">

            </div>

            <!-- Content Container -->
            <div class="mtb-50">
                <!-- Content -->
                {{ content  | safe}}
            </div>
      
        </div>
            
    </div>

    {# Related Posts #}
        <div class="mac mt-50">
            <h4 class=" _600 h3 paa-25">Recent Posts</h4>

            {# Recent Posts #}
            <div class="recent flex paa-25">

                {% for post in collections.posts | reverse %}
                    {% if loop.index0 < 3 %}
                        <article class=" mb-25 " style="background:white;max-width: 30%;height:200px;">

                            <div class="" style="">
                                <a href="{{post.url}}" style="text-decoration:none;"><h3 class="h4 _800">{{post.data.title }}</h3></a>
                                <p class="_12">{{post.data.description | truncate(100)}}</p>   
                            </div>

                        </article>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        
        
        {%- include 'footer.njk' -%}


</body>
</html>