<!DOCTYPE html>
<html lang="en">
    {%- include 'head.njk' -%}
<body>

    {%- include 'nav.njk' -%}

    <!-- Container -->
    <div class="postop">
        
        <!-- Post Container -->
        <div class="" >
            
            <!-- Post Information Container -->
            <div class="flex">    

                <!-- Date -->
                <div style="max-width:30%;padding:50px 0">

                    <span class="_10 _700">{{ page.date | postDate }}</span>

                     <!-- Title -->
                    <h1 class="h2">{{title}}</h1>

                </div>
                
                <!-- Image -->
                <div style="max-width:50%;">
                    <img src="\assets\images\jekyll-to-11ty.png" alt="">
                </div>

            </div>

            <!-- Content Container -->
            <div class="mtb-50">
                <!-- Content -->
                {{ content  | safe}}
            </div>
      
        </div>
            
    </div>

    {# Related Posts Container #}
    <div class="mac">
        <h3 class="paa-25">Recent Posts</h3>

        {# Posts #}
        <div class="recent flex paa-25">

            {% for post in collections.posts | reverse %}
                {% if loop.index0 < 3 %}
                    <article class="mw-30">

                        {# Related Post Title #}
                        <a href="{{post.url}}" style="text-decoration:none;">
                            <h3 class="h4">{{post.data.title }}</h3>
                        </a>
                        
                        {# Related Post Description #}
                        <p class="_12">{{post.data.description | truncate(100)}}</p>   

                    </article>
                {% endif %}
            {% endfor %}

        </div>
    </div>
        
    {%- include 'footer.njk' -%}

</body>
</html>