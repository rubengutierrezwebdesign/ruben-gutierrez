<!DOCTYPE html>
<html lang="en">
    {%- include 'head.njk' -%}
<body>

    {%- include 'nav.njk' -%}

    <!-- Container -->
    <div class="postop">
        
        <!-- Post Container -->
        <div class="" >
            
            <!-- Post Information -->
            <div class="mac post-information flex">    

                <!-- Post Title -->
                <div class="post-title" style="padding: 25px 25px 0">

                    <span class="_10 _700">{{ page.date | postDate }}</span>

                     <!-- Title -->
                    <h1 class="">{{title}}</h1>

                </div>
                
                <!-- Image -->
                <div style="max-width:50%;">
                    <img src="{{ page.thumbnail }}" alt="">
                </div>

            </div>

            <!-- Content Container -->
            <div>
                <!-- Content -->
                {{ content  | safe}}
            </div>
      
        </div>
            
    </div>

    {# Related Posts Container #}
    <div class="mac" style="margin-top:50px;">
        <h3 style="padding:0 25px 25px;">Recent Posts</h3>

        {# Posts #}
        <div class="recent flex related-post">

            {% for post in collections.posts | reverse %}
                {% if loop.index0 < 3 %}
                    <article class="mw-30" style="padding:10px 50px 50px 25px;background:;">

                        {# Related Post Title #}
                        <a href="{{post.url}}" style="text-decoration:none;">
                                                                <img src="{{post.data.thumbnail}}" alt="" >

                            <h3 class="h4">{{post.data.title }}</h3>
                        </a>
                        
                        {# Related Post Description #}
                        <p class="_12">{{post.data.description | truncate(100)}}</p>   
                        <div style="height:20px;width:20px;border:1px solid black;border-radius:50px;background:black;margin-top:75px;margin-left:auto;"></div>
                    </article>
                {% endif %}
            {% endfor %}

        </div>
        
    </div>
        
    
        <script>
            const hamMenu = document.querySelector(".ham-menu");
            const offScreenMenu = document.querySelector(".off-screen-menu");

            hamMenu.addEventListener("click", () => {
            hamMenu.classList.toggle("active");
            offScreenMenu.classList.toggle("active");
            }); 
        </script>
    {%- include 'footer.njk' -%}

</body>
</html>